body
  background-image url("/images/sparkles.gif");

div.chat
  color #411537;
  font 14px "Comic Sans", "Comic Sans MS", cursive;
  border 3px solid #E54676
  background-color #c462af

  .head
    background-color LightPink

  table.chat-view
    background-image: url("/images/kitty.gif");
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    ::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 6px Pink
    ::-webkit-scrollbar-thumb
      border-radius 10px
      -webkit-box-shadow inset 0 0 6px #E54676
    td.left, td.announcement
      border-color LightPink
    td.user:before
      content: "Cute-little-"

  input
    color #411537
    background-color LightPink
    font-family "Comic Sans", "Comic Sans MS", cursive

div.chat
  width 100%

  .head
    border-bottom: 1px solid;
    margin 15px
    padding 7px
    border-radius 10px

  table.chat-view
    width 85%
    float left
    tbody
      overflow: auto;
      display: block;
      td
        vertical-align: top;
      td.left
        border-right: 1px dashed;
        font-weight: bold;
        padding-right: 5px;

      td.time
        margin-right 5px
      td.time:before
        content "("
      td.time:after
        content ")"

  div.userlist-container
    float right
    margin auto
    padding 15px

    ul.userlist
        list-style none
        padding 0

  .foot
    border-top: 1px solid;
    clear both



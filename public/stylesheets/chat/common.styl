div.chat
  width 100%

  ::-webkit-scrollbar
    width 12px
  ::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px silver
    border-radius 10px
  ::-webkit-scrollbar-thumb
    border-radius 10px
    -webkit-box-shadow inset 0 0 6px gray

  .head
    border-bottom: 1px solid;
    margin 15px
    padding 7px
    border-radius 10px

  .foot
    border-top: 1px solid;

  table.chat-view
    width 100%
    tbody
      overflow: auto;
      display: block;
      td
        vertical-align: top;
      td.user
        border-right: 1px dashed;
        font-weight: bold;
        padding-right: 5px;


div.chat
  width 100%

  .head
    border-bottom: 1px solid;
    margin 15px
    padding 7px
    border-radius 10px

  table.chat-view
    ::-webkit-scrollbar
      width 12px
    ::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 6px silver
      border-radius 10px
    ::-webkit-scrollbar-thumb
      border-radius 10px
      -webkit-box-shadow inset 0 0 6px gray

    width 85%
    float left
    tbody
      overflow: auto;
      display: block;
      td
        vertical-align: top;
      td.left
        border-right: 1px dashed;
        font-weight: bold;
        padding-right: 5px;

  div.userlist-container
    float right
    margin auto
    padding 15px

    ul.userlist
        list-style none
        padding 0

  .foot
    border-top: 1px solid;
    clear both


